> data(nuclearplants)
> mhd2a <- mdist(pr ~ date + cum.n, data = nuclearplants, 
+               exclusions = exactMatch(pr ~ pt, data = nuclearplants))
> mhd2a <- t(mhd2a)
> 
> mhd2a.caliper <- mhd2a + caliper(3, mhd2a)
